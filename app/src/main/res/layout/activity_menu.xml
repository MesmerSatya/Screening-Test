<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_validation"
    android:weightSum="1"
    tools:context="stud11314053.itdel.screeningtest.MenuActivity">


    <TextView
        android:id="@+id/textUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama   :"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_marginStart="90dp"
        android:layout_alignTop="@+id/txtName"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textUser"
        android:layout_marginStart="11dp" />

    <Button
        android:id="@+id/btnEvent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/event"
        android:textAlignment="center"
        android:layout_marginTop="19dp"
        android:background="#43abd9"
        android:layout_below="@+id/textUser"
        android:layout_alignStart="@+id/textUser"
        android:onClick="openEvent"/>

    <Button
        android:id="@+id/btnGuest"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/guest"
        android:background="#43abd9"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/btnEvent"
        android:layout_alignStart="@+id/btnEvent"
        android:onClick="openGuest"/>


</RelativeLayout>
